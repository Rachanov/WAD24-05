<!doctype html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    
    <title>DONJAI ChatBot</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/cover/">



    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">



    <style>
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
        
        .navbar-nav {
            margin-left: auto; 
        }
        .nav-auth-buttons {
            margin-left: auto; 
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="./css/cover.css" rel="stylesheet">
</head>

<body class="d-flex h-100 text-center text-white bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div class="d-flex justify-content-between ">
                <h3 class="mb-0">DONJAI</h3>
                <nav class="nav nav-masthead ">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="#">Features</a>
                    <a class="nav-link" href="/contact">Contact</a>
                </nav>
                <div class="nav-auth-buttons">
                    <% if (loggedIn) { %>
                        <a class="btn btn-sm btn-danger mx-3" href="/logout">Logout</a>
                    <% } %>
            
                    <% if (!loggedIn) { %>
                        <a class="btn btn-sm btn-outline-secondary mx-3" href="/login">Sign In</a>
                        <a class="btn btn-sm btn-success" href="/register">Sign Up</a>
                    <% } %>
                </div>
            </div>
        </header>

        <main class="px-3">
            <h1>CHATBOT</h1>
            <p class="lead">The chatbot is designed to answer questions about agricultural drones.</p>
            <p class="lead">
                <a class="btn btn-lg btn-secondary fw-bold border-white bg-white" href="/chatbot">START NOW</a>
            </p>
        </main>

        <footer class="mt-auto text-white-50">
            <p>@2024 <a href="#" class="text-white"></a><a
                    href="#" class="text-white"></a></p>
        </footer>
    </div>



</body>

</html>
